@model TimeSheet.Entity.Models.TimeSheetModel


<form method="post" enctype="multipart/form-data">
    <h2>Update TimeSheet</h2><hr />
    <div class="form-group">
        <label>TimeSheet ID</label>
        <input type="text" asp-for="TimeSheetID" class="form-control" placeholder="Enter TimeSheet ID" required />
    </div>
    <div class="form-group">
        <label>Project ID</label>
        <input type="text" asp-for="ProjectID" class="form-control" placeholder="Enter Project ID" required />
    </div>
    <div class="form-group">
        <label>Employee ID</label>
        <input type="text" asp-for="EmpID" class="form-control" placeholder="Enter Employee ID" required />
    </div>
    <div class="form-group">
        <label>Date</label>
        <input type="text" asp-for="Date" class="form-control" placeholder="Enter Date" required />
    </div>
    <div class="form-group">
        <label>Time From</label>
        <input type="text" asp-for="TimeFrom" class="form-control" placeholder="Enter Time From" required />
    </div>
    <div class="form-group">
        <label>Time To</label>
        <input type="text" asp-for="TimeTo" class="form-control" placeholder="Enter To" required />
    </div>
    <div class="form-group">
        <label>Hours</label>
        <input type="text" asp-for="Hours" class="form-control" placeholder="Enter Hours" required />
    </div>
    <div class="form-group">
        <label>Status</label>
        <input type="text" asp-for="Status" value="Requested" disabled="disabled" class="form-control" placeholder="Enter Status" required />
    </div>

    <input type="submit" value="Update" class="btn btn-success" />

    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>