@model TimeSheet.Entity.Models.Project


<form method="post" enctype="multipart/form-data">
    <h2>Update Project</h2><hr />
    <div class="form-group">
        <label>Project ID</label>
        <input type="text" asp-for="ProjectID" class="form-control" placeholder="Enter Project ID" required />
    </div>
    <div class="form-group">
        <label>Project Name</label>
        <input type="text" asp-for="ProjectName" class="form-control" placeholder="Enter Project Name" required />
    </div>
    <div class="form-group">
        <label>Project Description</label>
        <input type="text" asp-for="ProjectDesc" class="form-control" placeholder="Enter Project Description" required />
    </div>

    <input type="submit" value="Update" class="btn btn-success" />

    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>