@model TimeSheet.Entity.Models.Employee


<form method="post" enctype="multipart/form-data">
    <h2>Update Employee</h2><hr />
    <div class="form-group">
        <label>Employee ID</label>
        <input type="text" asp-for="EmpID" class="form-control" placeholder="Enter Employee ID" required />
    </div>
    <div class="form-group">
        <label>Employee Name</label>
        <input type="text" asp-for="EmpName" class="form-control" placeholder="Enter Employee Name" required />
    </div>
    <div class="form-group">
        <label>Employee Designation</label>
        <input type="text" asp-for="EmpDesig" class="form-control" placeholder="Enter Employee Designation" required />
    </div>
    <div class="form-group">
        <label>Employee EmailID</label>
        <input type="text" asp-for="EmpEmailID" class="form-control" placeholder="Enter Employee EmailID" required />
    </div>
    <div class="form-group">
        <label>Employee Contact</label>
        <input type="text" asp-for="EmpPhone" class="form-control" placeholder="Enter Employee Contact Number" required />
    </div>
    <div class="form-group">
        <label>Employee UserName</label>
        <input type="text" asp-for="EmpUserName" class="form-control" placeholder="Enter Employee UserName" required />
    </div>
    <div class="form-group">
        <label>Employee Password</label>
        <input type="text" asp-for="EmpPsw" class="form-control" placeholder="Enter Employee Password" required />
    </div>
    <div class="form-group">
        <label>Employee JoiningDate</label>
        <input type="text" asp-for="EmpDOJ" class="form-control" placeholder="Enter Employee Date of Joining" required />
    </div>
    <div class="form-group">
        <label>ManagerID</label>
        <input type="text" asp-for="MgrID" class="form-control" placeholder="Enter ManagerID" required />
    </div>
    <div class="form-group">
        <label>Employee CurrentProjectID</label>
        <input type="text" asp-for="CurrentProjectID" class="form-control" placeholder="Enter Current ProjectID" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />

    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>